@page
@model Aranceles_UI.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Nueva Categoría";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-tag-fill text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">Completa el formulario para crear una nueva categoría de arancel</p>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>
    <hr class="border-2 opacity-25">
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <form method="post" class="card shadow-lg border-0">
            <div class="card-body p-3.5 p-md-4">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>

                <div class="row g-4">
                    <div class="col-12">
                        <label asp-for="Category.Name" class="form-label fw-semibold">
                            <i class="bi bi-tag me-1 text-primary"></i>Nombre de la Categoría
                        </label>
                        <input asp-for="Category.Name"
                               class="form-control"
                               placeholder="Ej: Matrícula Pregrado"
                               required
                               minlength="3"
                               maxlength="150" />
                        <span asp-validation-for="Category.Name" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Category.Description" class="form-label fw-semibold">
                            <i class="bi bi-text-paragraph me-1 text-primary"></i>Descripción
                        </label>
                        <textarea asp-for="Category.Description"
                                  class="form-control"
                                  rows="4"
                                  placeholder="Ingrese una descripción detallada de la categoría..."
                                  maxlength="1000"></textarea>
                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-info-circle me-1"></i>Máximo 1000 caracteres
                        </small>
                        <span asp-validation-for="Category.Description" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Category.BaseAmount" class="form-label fw-semibold">
                            <i class="bi me-1 text-primary"></i>Monto Base (Bs)
                        </label>
                        <div class="input-group">
                            <span class="input-group-text bg-light">
                                <i class="bi bi-cash-coin text-success"></i>
                            </span>
                            <input asp-for="Category.BaseAmount"
                                   class="form-control"
                                   type="number"
                                   step="0.01"
                                   placeholder="0.00"
                                   required
                                   min="0" />
                            <span class="input-group-text bg-light">Bs</span>
                        </div>
                        <span asp-validation-for="Category.BaseAmount" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>
                </div>


                <div class="d-flex gap-3 justify-content-end mt-4 pt-3 border-top">
                    <a asp-page="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success px-5">
                        <i class="bi bi-check-circle me-2"></i>Guardar
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>