@page
@model Aranceles_UI.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Gesti√≥n de Usuarios";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-people-fill text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">Administra y gestiona los usuarios del sistema</p>
        </div>
        <a asp-page="Create" class="btn btn-primary px-4">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Usuario
        </a>
    </div>
    <hr class="border-2 opacity-25">
</div>

<form method="post" asp-page-handler="Search" class="mb-3">
    <div class="input-group">
        <input asp-for="SearchTerm"
               class="form-control"
               placeholder="Buscar por nombre, usuario o email" />
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-page="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>

@if(Model.Users.Any())
{
<table class="table table-hover align-middle">
    <thead class="table-primary">
    <tr>
        <th>Usuario</th>
        <th>Nombre Completo</th>
        <th>Correo</th>
        <th>Rol</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Role == "1")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else if (user.Role == "2")
                    {
                        <span class="badge bg-info">Contador</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@user.Role</span>
                    }
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@(Model.Protect(user.Id))" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil-square me-1"></i>Editar
                        </a>
						<a asp-page="Delete" asp-route-id="@(Model.Protect(user.Id))" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash3 me-1"></i>Eliminar
                        </a>
					</div>
                </td>
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <tr>
        <td colspan="5" class="text-center py-4">
            <div class="text-muted">
                <i class="bi bi-info-circle me-2"></i>
                No hay Usuarios registradas.
            </div>
        </td>
    </tr>
}