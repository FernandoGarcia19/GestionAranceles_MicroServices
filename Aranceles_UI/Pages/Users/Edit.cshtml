@page "{id?}"
@model Aranceles_UI.Pages.Users.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-pencil-square text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">Modifica la informaci칩n del usuario seleccionado</p>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>
    <hr class="border-2 opacity-25">
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <form method="post" class="card shadow border-0">
            <div class="card-body p-3.5 p-md-4">

                <input type="hidden" asp-for="User.Id" />
                <input type="hidden" asp-for="User.Username" />
                <input type="hidden" asp-for="User.PasswordHash" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4" role="alert"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-person-badge me-1 text-primary"></i>Usuario
                        </label>
                        <input value="@Model.User.Username" class="form-control" disabled />
                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-info-circle me-1"></i>El nombre de usuario no puede ser modificado
                        </small>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.FirstName" class="form-label fw-semibold">
                            <i class="bi bi-person me-1 text-primary"></i>Nombre
                        </label>
                        <input asp-for="User.FirstName" class="form-control" placeholder="Ingrese el nombre"  />
                        <span asp-validation-for="User.FirstName" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.LastName" class="form-label fw-semibold">
                            <i class="bi bi-person me-1 text-primary"></i>Apellido
                        </label>
                        <input asp-for="User.LastName" class="form-control" placeholder="Ingrese el apellido"  />
                        <span asp-validation-for="User.LastName" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope me-1 text-primary"></i>Correo Electr칩nico
                        </label>
                        <input asp-for="User.Email" type="email" class="form-control" placeholder="correo@ejemplo.com"  />
                        <span asp-validation-for="User.Email" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="User.Role" class="form-label fw-semibold">
                            <i class="bi bi-shield-check me-1 text-primary"></i>Rol
                        </label>
                        <select asp-for="User.Role" class="form-select" >
                            <option value="1">Admin</option>
                            <option value="2">Contador</option>
                        </select>
                        <span asp-validation-for="User.Role" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-12">
                        <div class="alert alert-info border-0 shadow-sm">
                            <i class="bi bi-shield-lock-fill me-2"></i>
                            <strong>Nota sobre contrase침a:</strong> Para cambiar la contrase침a del usuario, debe eliminarlo y crear uno nuevo.
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3 justify-content-end mt-4 pt-3 border-top">
                    <a asp-page="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning px-5">
                        <i class="bi bi-check-circle me-2"></i>Actualizar
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}