
@page
@model Aranceles_UI.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Crear Usuario";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-person-plus-fill text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">Completa el formulario para crear un nuevo usuario en el sistema</p>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>
    <hr class="border-2 opacity-25">
</div>

@if (!String.IsNullOrEmpty(Model.GeneratedUsername))
{
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="alert alert-success shadow-sm border-0" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-check-circle-fill me-2"></i>¡Usuario creado exitosamente!
                </h4>
                <p class="mb-3">
                    @* <strong>Usuario generado:</strong> <span class="badge bg-success-subtle text-success fs-6">@Model.GeneratedUsername</span> *@
                </p>
                <div class="alert alert-info border-0 mt-3 mb-3">
                    <i class="bi bi-envelope-check-fill me-2"></i>
                    <strong>Correo enviado:</strong> Se ha enviado un correo electrónico a <strong>@Model.UserDto.Email</strong>
                    con las credenciales de acceso y la contraseña generada.
                </div>
                <hr class="my-3">
                <p class="mb-0 small">
                    <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                    Si el usuario no recibe el correo, verifique la carpeta de spam o contacte al administrador del sistema.
                </p>
            </div>
            <div class="text-center">
                <a asp-page="Index" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-list-ul me-2"></i>Volver a la lista
                </a>
            </div>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <form method="post" class="card shadow border-0">
                <div class="card-body p-3.5 p-md-4">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="UserDto.FirstName" class="form-label fw-semibold">
                                <i class="bi bi-person me-1 text-primary"></i>Primer Nombre
                            </label>
                            <input asp-for="UserDto.FirstName" class="form-control" placeholder="Ej: Juan"  />
                            <span asp-validation-for="UserDto.FirstName" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SecondName" class="form-label fw-semibold">
                                <i class="bi bi-person me-1 text-primary"></i>Segundo Nombre
                            </label>
                            <input asp-for="SecondName" class="form-control" placeholder="Ej: Carlos" />
                            <span asp-validation-for="SecondName" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UserDto.LastName" class="form-label fw-semibold">
                                <i class="bi bi-person me-1 text-primary"></i>Primer Apellido
                            </label>
                            <input asp-for="UserDto.LastName" class="form-control" placeholder="Ej: Pérez" />
                            <span asp-validation-for="UserDto.LastName" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SecondLastName" class="form-label fw-semibold">
                                <i class="bi bi-person me-1 text-primary"></i>Segundo Apellido
                            </label>
                            <input asp-for="SecondLastName" class="form-control" placeholder="Ej: García" />
                            <span asp-validation-for="SecondLastName" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UserDto.Email" class="form-label fw-semibold">
                                <i class="bi bi-envelope me-1 text-primary"></i>Correo Electrónico
                            </label>
                            <input asp-for="UserDto.Email" type="email" class="form-control" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="UserDto.Email" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="UserDto.Role" class="form-label fw-semibold">
                                <i class="bi bi-shield-check me-1 text-primary"></i>Rol
                            </label>
                            <select asp-for="UserDto.Role" class="form-select">
                                <option value="" selected>Seleccionar rol</option>
                                <option value="Admin">Admin</option>
                                <option value="Contador">Contador</option>
                            </select>
                            <span asp-validation-for="UserDto.Role" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-3 justify-content-end mt-5 pt-4 border-top">
                        <a asp-page="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-x-circle me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-success px-5">
                            <i class="bi bi-check-circle me-2"></i>Crear Usuario
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
