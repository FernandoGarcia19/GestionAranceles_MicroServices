@page "{id?}"
@model Aranceles_UI.Pages.PersonInCharges.DeleteModel
@{
    ViewData["Title"] = "Eliminar Encargado";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-trash text-danger me-2"></i>
                @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">
                Confirma la eliminación del encargado seleccionado
            </p>
        </div>

        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <hr class="border-2 opacity-25">
</div>

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card border-warning shadow-sm">
            <div class="card-body p-4 bg-warning bg-opacity-10">

                <div class="text-center mb-4">
                    <i class="bi bi-exclamation-triangle text-warning display-4 mb-3"></i>
                    <h5 class="fw-semibold">
                        ¿Estás seguro que deseas eliminar este encargado?
                    </h5>
                </div>

                <div class="alert alert-light border mb-4">
                    <div class="mb-2">
                        <small class="text-muted">Nombre:</small>
                        <div class="fw-semibold">
                            @Model.Person.FirstName @Model.Person.LastName
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Person.Email))
                    {
                        <div class="mb-2">
                            <small class="text-muted">Correo:</small>
                            <div>@Model.Person.Email</div>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Person.Phone))
                    {
                        <div>
                            <small class="text-muted">Teléfono:</small>
                            <div>@Model.Person.Phone</div>
                        </div>
                    }
                </div>

                <div class="alert alert-warning border-0 mb-4">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        <strong>Nota:</strong> Esta acción marcará al encargado como inactivo en el sistema.
                    </small>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Person.Id" />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-page="Index" class="btn btn-secondary px-4">
                            <i class="bi bi-x-circle me-1"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash me-1"></i>Eliminar
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>