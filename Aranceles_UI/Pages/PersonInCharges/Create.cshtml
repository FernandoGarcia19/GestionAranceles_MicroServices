@page
@model Aranceles_UI.Pages.PersonInCharges.CreateModel
@{
    ViewData["Title"] = "Nuevo Encargado";
}

<!-- HEADER  -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-person-plus-fill text-primary me-2"></i>
                @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">
                Completa el formulario para registrar un nuevo encargado
            </p>
        </div>

        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <hr class="border-2 opacity-25">
</div>

<!-- FORMULARIO -->
<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <form method="post" class="card shadow border-0" novalidate>
            <div class="card-body p-3.5 p-md-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Person.FirstName" class="form-label fw-semibold">
                            <i class="bi bi-person text-primary me-1"></i>Primer Nombre
                        </label>
                        <input asp-for="Person.FirstName"
                               class="form-control"
                               placeholder="Ej: Juan"/>
                        <span asp-validation-for="Person.FirstName"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SecondName" class="form-label fw-semibold">
                            <i class="bi bi-person text-primary me-1"></i>Segundo Nombre
                        </label>
                        <input asp-for="SecondName"
                               class="form-control"
                               placeholder="Ej: Carlos"
                               maxlength="50" />
                        <span asp-validation-for="SecondName"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Person.LastName" class="form-label fw-semibold">
                            <i class="bi bi-person text-primary me-1"></i>Primer Apellido
                        </label>
                        <input asp-for="Person.LastName"
                               class="form-control"
                               placeholder="Ej: Pérez"/>
                        <span asp-validation-for="Person.LastName"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SecondLastName" class="form-label fw-semibold">
                            <i class="bi bi-person text-primary me-1"></i>Segundo Apellido
                        </label>
                        <input asp-for="SecondLastName"
                               class="form-control"
                               placeholder="Ej: García"/>
                        <span asp-validation-for="SecondLastName"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Person.Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope text-primary me-1"></i>Email
                        </label>
                        <input asp-for="Person.Email"
                               class="form-control"
                               placeholder="correo@ejemplo.com"/>
                        <span asp-validation-for="Person.Email"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Person.Phone" class="form-label fw-semibold">
                            <i class="bi bi-telephone text-primary me-1"></i>Teléfono
                        </label>
                        <input asp-for="Person.Phone"
                               class="form-control"
                               placeholder="Ej. 7000-0000"/>
                        <span asp-validation-for="Person.Phone"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Person.Ci" class="form-label fw-semibold">
                            <i class="bi bi-card-text text-primary me-1"></i>CI
                        </label>
                        <input asp-for="Person.Ci"
                               type="number"
                               class="form-control"
                               placeholder="Documento de identidad"/>
                        <span asp-validation-for="Person.Ci"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Complemento" class="form-label fw-semibold">
                            <i class="bi bi-card-text text-primary me-1"></i>Complemento
                        </label>
                        <input asp-for="Complemento"
                               class="form-control"
                               placeholder="Ej: CIB"/>
                        <span asp-validation-for="Complemento"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>
                </div>

                <div class="d-flex gap-3 justify-content-end mt-5 pt-4 border-top">
                    <a asp-page="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success px-5">
                        <i class="bi bi-check-circle me-2"></i>Guardar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}