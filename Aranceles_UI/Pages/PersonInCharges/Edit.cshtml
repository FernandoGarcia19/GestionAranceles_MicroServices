@page "{id?}"
@model Aranceles_UI.Pages.PersonInCharges.EditModel
@{
    ViewData["Title"] = "Editar Encargado";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-pencil-square text-primary me-2"></i>
                @ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">
                Modifica la información del encargado seleccionado
            </p>
        </div>

        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>

    <hr class="border-2 opacity-25">
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-8">
        <form method="post" class="card shadow-lg border-0">
            <div class="card-body p-3.5 p-md-3">

                <input type="hidden" asp-for="PersonDto.Id"/>
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="PersonDto.FirstName" class="form-label fw-semibold">
                            <i class="bi bi-person text-primary me-1"></i>Nombre
                        </label>
                        <input asp-for="PersonDto.FirstName"
                               class="form-control"
                               placeholder="Ingrese el nombre"/>
                        <span asp-validation-for="PersonDto.FirstName"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PersonDto.LastName" class="form-label fw-semibold">
                            <i class="bi bi-person text-primary me-1"></i>Apellido
                        </label>
                        <input asp-for="PersonDto.LastName"
                               class="form-control"
                               placeholder="Ingrese el apellido"/>
                        <span asp-validation-for="PersonDto.LastName"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PersonDto.Email" class="form-label fw-semibold">
                            <i class="bi bi-envelope text-primary me-1"></i>Email
                        </label>
                        <input asp-for="PersonDto.Email"
                               type="email"
                               class="form-control"
                               placeholder="correo@ejemplo.com"/>
                        <span asp-validation-for="PersonDto.Email"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PersonDto.Phone" class="form-label fw-semibold">
                            <i class="bi bi-telephone text-primary me-1"></i>Teléfono
                        </label>
                        <input asp-for="PersonDto.Phone"
                               class="form-control"
                               placeholder="Ej. 7000-0000"/>
                        <span asp-validation-for="PersonDto.Phone"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PersonDto.Ci" class="form-label fw-semibold">
                            <i class="bi bi-card-text text-primary me-1"></i>CI
                        </label>
                        <input asp-for="PersonDto.Ci"
                               class="form-control"
                               placeholder="Documento de identidad"/>
                        <span asp-validation-for="PersonDto.Ci"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Complemento" class="form-label fw-semibold">
                            <i class="bi bi-card-text text-primary me-1"></i>Complemento
                        </label>
                        <input asp-for="Complemento"
                               class="form-control"
                               placeholder="Ej: CB"
                               maxlength="2"/>
                        <span asp-validation-for="Complemento"
                              class="text-danger d-block mt-2 fw-semibold"
                              style="font-size: 0.9rem;"></span>
                    </div>
                </div>

                <div class="d-flex gap-3 justify-content-end mt-4 pt-3 border-top">
                    <a asp-page="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning px-5">
                        <i class="bi bi-check-circle me-2"></i>Actualizar
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
