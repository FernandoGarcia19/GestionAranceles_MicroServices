@page
@model Aranceles_UI.Pages.PersonInCharges.IndexModel
@{
    ViewData["Title"] = "Encargados";
}

<!-- HEADER -->
<div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
    <div>
        <h2 class="mb-1 fw-bold text-dark">
            <i class="bi bi-people-fill text-primary me-2"></i>
            @ViewData["Title"]
        </h2>
        <p class="text-muted mb-0 small">
            Gestión de personas encargadas registradas en el sistema
        </p>
    </div>
    <div class="d-flex gap-2">
        <a asp-page-handler="GenerateReport" class="btn btn-success">
            <i class="bi bi-file-earmark-excel"></i> Generar Reporte Excel
        </a>

        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>Nuevo Encargado
        </a>
    </div>
</div>


<form method="post" asp-page-handler="Search" class="mb-3">
    <div class="input-group">
        <input asp-for="SearchTerm"
               class="form-control"
               placeholder="Buscar por nombre, usuario o email" />
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-page="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>
@if(Model.Persons.Any())
{
<div class="card shadow border-0">
    <div class="card-body p-3 p-md-4">
        <div class="table-responsive">
            <table class="table align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th class="text-nowrap">
                            <i class="bi bi-person-badge me-1 text-primary"></i>Nombre
                        </th>
                        <th class="text-nowrap">
                            <i class="bi bi-envelope me-1 text-primary"></i>Correo
                        </th>
                        <th class="text-nowrap">
                            <i class="bi bi-telephone me-1 text-primary"></i>Teléfono
                        </th>
                        <th class="text-nowrap">
                            <i class="bi bi-card-text me-1 text-primary"></i>CI
                        </th>
                        <th class="text-end text-nowrap">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                        @foreach (var p in Model.Persons)
                        {
                            <tr>
                                <td class="fw-semibold">@p.FirstName @p.LastName</td>

                                <td>
                                    @if (!string.IsNullOrWhiteSpace(p.Email))
                                    {
                                        <a href="mailto:@p.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope-open me-1 text-muted"></i>@p.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td>
                                    @if (!string.IsNullOrWhiteSpace(p.Phone))
                                    {
                                        <span>@p.Phone</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td>@(string.IsNullOrWhiteSpace(p.Ci) ? "—" : p.Ci)</td>

                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-page="Edit" asp-route-id="@(Model.Protect(p.Id))"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil-square me-1"></i>Editar
                                        </a>

                                        <a asp-page="Delete" asp-route-id="@(Model.Protect(p.Id))"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i>Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
else
{
    <tr>
        <td colspan="5" class="text-center py-4">
            <div class="text-muted">
                <i class="bi bi-info-circle me-2"></i>
                No hay personas registradas.
            </div>
        </td>
    </tr>
}