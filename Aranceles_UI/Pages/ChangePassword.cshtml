@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="row justify-content-center align-items-center min-vh-80">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 password-change-card">
            <!-- HEADER -->
            <div class="card-header bg-white border-bottom-custom text-center py-4">
                <i class="bi bi-shield-lock text-primary display-4 mb-3"></i>
                <h2 class="mb-0 fw-semibold text-dark">Cambiar Contraseña</h2>
                @if (Model.IsFirstLogin)
                {
                    <p class="text-danger mb-0 mt-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Es necesario cambiar su contraseña para continuar
                    </p>
                }
            </div>

            <!-- BODY -->
            <div class="card-body p-3.5 p-md-3.5">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="CurrentPassword" class="form-label fw-semibold">
                            <i class="bi bi-key-fill me-3"></i>Contraseña Actual
                        </label>
                        <input asp-for="CurrentPassword" class="form-control form-control-lg password-input" type="password"/>
                        <span asp-validation-for="CurrentPassword" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.95rem;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NewPassword" class="form-label fw-semibold">
                            <i class="bi bi-lock-fill me-3"></i>Nueva Contraseña
                        </label>
                        <input asp-for="NewPassword" class="form-control form-control-lg password-input" type="password"/>
                        <span asp-validation-for="NewPassword" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.95rem;"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold">
                            <i class="bi bi-check-circle-fill me-3"></i>Confirmar Contraseña
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg password-input" type="password"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.95rem;"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary fw-semibold py-3">
                            <i class="bi bi-check2-circle me-2"></i>Cambiar Contraseña
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}