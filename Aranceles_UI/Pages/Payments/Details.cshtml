@page
@model Aranceles_UI.Pages.Payments.DetailsModel

@{
    ViewData["Title"] = "Detalle del Pago";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-receipt text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">Información completa del registro de pago</p>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>
    <hr class="border-2 opacity-25">
</div>

@if (Model.Payment == null)
{
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>No se encontró el pago solicitado.
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Información General
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-building me-1"></i>Establecimiento
                            </label>
                            <p class="fw-semibold mb-0">
                                @if (!string.IsNullOrEmpty(Model.Payment.EstablishmentName))
                                {
                                    @Model.Payment.EstablishmentName
                                }
                                else
                                {
                                    <span class="text-muted">ID: @Model.Payment.EstablishmentId</span>
                                }
                            </p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-calendar-event me-1"></i>Fecha de Pago
                            </label>
                            <p class="fw-semibold mb-0">@Model.Payment.PaymentDate.ToString("dd/MM/yyyy")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-credit-card me-1"></i>Método de Pago
                            </label>
                            <p class="mb-0">
                                <span class="badge bg-warning-subtle text-warning px-3 py-2">
                                    @Model.Payment.PaymentMethod
                                </span>
                            </p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-muted small mb-1">
                                <i class="bi bi-receipt me-1"></i>Número de Recibo
                            </label>
                            <p class="fw-semibold mb-0">#@Model.Payment.ReceiptNumber</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Categories Section -->
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-tags me-2"></i>Categorías de Pago
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.Payment.Items != null && Model.Payment.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Categoría</th>
                                        <th class="text-center">Cantidad</th>
                                        <th class="text-end">Precio Unitario (Bs)</th>
                                        <th class="text-end">Subtotal (Bs)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Payment.Items)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.CategoryName))
                                                {
                                                    <span class="fw-semibold">@item.CategoryName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">ID: @item.CategoryId</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@item.Quantity</span>
                                            </td>
                                            <td class="text-end">@item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end fw-semibold">@((item.Quantity * item.UnitPrice).ToString("N2"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>No hay categorías asociadas a este pago.
                        </div>
                    }
                </div>
            </div>

            <!-- Total Section -->
            <div class="card shadow border-0">
                <div class="card-body p-4 bg-success bg-opacity-10">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-0 fw-bold">
                                <i class="bi bi-cash-coin text-success me-2"></i>Monto Total Pagado
                            </h5>
                        </div>
                        <div class="col-md-6 text-end">
                            <h3 class="mb-0 text-success fw-bold">
                                @Model.Payment.AmountPaid.ToString("N2") Bs
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-page="Index" class="btn btn-primary px-5">
            <i class="bi bi-arrow-left me-2"></i>Volver al Listado
        </a>
    </div>
}
