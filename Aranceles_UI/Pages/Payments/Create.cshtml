@page
@model Aranceles_UI.Pages.Payments.CreateModel

@{
    ViewData["Title"] = "Registrar Pago";
}

<!-- HEADER -->
<div class="mb-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
        <div>
            <h2 class="mb-1 fw-bold text-dark">
                <i class="bi bi-cash-stack text-primary me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0 small">Completa el formulario para registrar un nuevo pago de arancel</p>
        </div>
        <a asp-page="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i>Volver
        </a>
    </div>
    <hr class="border-2 opacity-25">
</div>

<div class="row justify-content-center">
    <div class="col-12 col-lg-10 col-xl-9">
        <form method="post" class="card shadow border-0">
            <div class="card-body p-3.5 p-md-4">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0" role="alert"></div>

                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="Payment.EstablishmentId" class="form-label fw-semibold">
                            <i class="bi bi-building text-primary me-1"></i>Establecimiento
                        </label>
                        <select asp-for="Payment.EstablishmentId" class="form-select">
                            <option value="">-- Seleccionar establecimiento --</option>
                            @foreach (var establishment in Model.Establishments)
                            {
                                <option value="@establishment.Id">@establishment.Name (NIT: @establishment.TaxId)</option>
                            }
                        </select>
                        <span asp-validation-for="Payment.EstablishmentId" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Payment.PaymentDate" class="form-label fw-semibold">
                            <i class="bi bi-calendar-event text-primary me-1"></i>Fecha de Pago
                        </label>
                        <input asp-for="Payment.PaymentDate" class="form-control" type="date" />
                        <span asp-validation-for="Payment.PaymentDate" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Payment.PaymentMethod" class="form-label fw-semibold">
                            <i class="bi bi-credit-card text-primary me-1"></i>Método de Pago
                        </label>
                        <select asp-for="Payment.PaymentMethod" class="form-select">
                            <option value="">-- Seleccionar método --</option>
                            <option value="Efectivo">Efectivo</option>
                            <option value="Tarjeta de Débito">Tarjeta de Débito</option>
                            <option value="Tarjeta de Crédito">Tarjeta de Crédito</option>
                            <option value="Transferencia Bancaria">Transferencia Bancaria</option>
                            <option value="QR">QR</option>
                            <option value="Cheque">Cheque</option>
                        </select>
                        <span asp-validation-for="Payment.PaymentMethod" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Payment.ReceiptNumber" class="form-label fw-semibold">
                            <i class="bi bi-receipt text-primary me-1"></i>Número de Recibo
                        </label>
                        <input asp-for="Payment.ReceiptNumber"
                               class="form-control"
                               type="number"
                               min="1"
                               max="16777215"
                               placeholder="Ej: 123456" />
                        <span asp-validation-for="Payment.ReceiptNumber" class="text-danger d-block mt-2 fw-semibold" style="font-size: 0.9rem;"></span>
                    </div>

                </div>

                <!-- Categories Section -->
                <div class="mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-tags text-primary me-2"></i>Categorías de Pago
                        </h5>
                        <button type="button" class="btn btn-sm btn-primary" onclick="addCategoryItem()">
                            <i class="bi bi-plus-circle me-1"></i>Agregar Categoría
                        </button>
                    </div>

                    <div id="categoryItems" class="row g-3">
                        <!-- Category items will be added here dynamically -->
                    </div>
                    
                    <div id="noCategoriesMessage" class="alert alert-info mt-3">
                        <i class="bi bi-info-circle me-2"></i>Agrega al menos una categoría al pago
                    </div>
                </div>

                <!-- Total Amount Display -->
                <div class="mt-4 p-3 bg-light rounded">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold mb-0">
                                <i class="bi bi-cash-coin text-success me-1"></i>Monto Total Calculado
                            </label>
                        </div>
                        <div class="col-md-6 text-end">
                            <h4 class="mb-0 text-success fw-bold">
                                <span id="totalAmount">0</span> Bs
                            </h4>
                        </div>
                    </div>
                </div>

                <input type="hidden" asp-for="Payment.AmountPaid" id="hiddenAmountPaid" />

                <div class="d-flex gap-3 justify-content-end mt-5 pt-4 border-top">
                    <a asp-page="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success px-5">
                        <i class="bi bi-check-circle me-2"></i>Guardar
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        let categoryCounter = 0;
        const categories = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Categories.Select(c => new { c.Id, c.Name, c.BaseAmount })));

        function addCategoryItem() {
            const container = document.getElementById('categoryItems');
            const itemHtml = `
                <div class="col-12 category-item-row" id="categoryItem_${categoryCounter}">
                    <div class="card border-primary">
                        <div class="card-body p-3">
                            <div class="row g-3 align-items-end">
                                <div class="col-md-5">
                                    <label class="form-label fw-semibold">Categoría</label>
                                    <select class="form-select category-select" name="Payment.Items[${categoryCounter}].CategoryId" onchange="updateUnitPrice(${categoryCounter})">
                                        <option value="">-- Seleccionar --</option>
                                        ${categories.map(c => `<option value="${c.Id}" data-price="${c.BaseAmount}">${c.Name} (${c.BaseAmount} Bs)</option>`).join('')}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label fw-semibold">Cantidad</label>
                                    <input type="number" class="form-control quantity-input" name="Payment.Items[${categoryCounter}].Quantity" min="1" max="255" value="1" onchange="calculateTotal()" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label fw-semibold">Precio Unit. (Bs)</label>
                                    <input type="number" class="form-control unitprice-input" name="Payment.Items[${categoryCounter}].UnitPrice" min="1" max="16777215" readonly />
                                </div>
                                <div class="col-md-2 text-center">
                                    <button type="button" class="btn btn-danger btn-sm w-100" onclick="removeCategoryItem(${categoryCounter})">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', itemHtml);
            categoryCounter++;
            updateNoCategoriesMessage();
            calculateTotal();
        }

        function removeCategoryItem(index) {
            const item = document.getElementById(`categoryItem_${index}`);
            if (item) {
                item.remove();
                updateNoCategoriesMessage();
                calculateTotal();
            }
        }

        function updateUnitPrice(index) {
            const row = document.getElementById(`categoryItem_${index}`);
            const select = row.querySelector('.category-select');
            const selectedOption = select.options[select.selectedIndex];
            const price = selectedOption.getAttribute('data-price');
            const unitPriceInput = row.querySelector('.unitprice-input');
            
            if (price) {
                unitPriceInput.value = Math.round(parseFloat(price));
            } else {
                unitPriceInput.value = '';
            }
            
            calculateTotal();
        }

        function calculateTotal() {
            let total = 0;
            const rows = document.querySelectorAll('.category-item-row');
            
            rows.forEach(row => {
                const quantity = parseFloat(row.querySelector('.quantity-input').value) || 0;
                const unitPrice = parseFloat(row.querySelector('.unitprice-input').value) || 0;
                total += quantity * unitPrice;
            });
            
            document.getElementById('totalAmount').textContent = total.toFixed(2);
            document.getElementById('hiddenAmountPaid').value = total.toFixed(2);
        }

        function updateNoCategoriesMessage() {
            const container = document.getElementById('categoryItems');
            const message = document.getElementById('noCategoriesMessage');
            
            if (container.children.length === 0) {
                message.style.display = 'block';
            } else {
                message.style.display = 'none';
            }
        }

        // Initialize with one category item
        document.addEventListener('DOMContentLoaded', function() {
            addCategoryItem();
        });
    </script>
}


