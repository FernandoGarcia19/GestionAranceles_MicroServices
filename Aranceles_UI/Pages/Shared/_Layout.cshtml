﻿@{
    var title = ViewData["Title"] ?? "Sistema de Pagos de Aranceles";
    bool isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    bool isAdmin = isAuthenticated && (User?.IsInRole("Admin") ?? false);
    bool isContador = isAuthenticated && (User?.IsInRole("Contador") ?? false);
    bool hideSidebar = ViewData["HideSidebar"] as bool? ?? false;
    
    // Debug info
    System.Console.WriteLine($"Layout Debug - isAuthenticated: {isAuthenticated}, hideSidebar: {hideSidebar}, Title: {title}");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>@title</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- NAVBAR SUPERIOR -->
    <nav class="navbar bg-primary navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid">

            @if (hideSidebar)
            {
                <div class="navbar-brand d-flex align-items-center fw-bold">
                    <img src="@Url.Content("/budget.png")" alt="Logo" class="me-2" style="height:40px; width:auto;">
                    Pagos de Aranceles
                </div>
            }
            else
            {
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-page="/Index">
                    <img src="@Url.Content("/budget.png")" alt="Logo" class="me-2" style="height:40px; width:auto;">
                    Pagos de Aranceles
                </a>
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- SIDEBAR -->
            @if (!hideSidebar)
            {
                <nav id="sidebarMenu" class="col-md-2 col-lg-2 d-md-block sidebar sidebar-custom">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">

                            <li class="nav-item">
                                <a class="nav-link active" asp-page="/Index">
                                    <i class="bi bi-house-door-fill"></i> Inicio
                                </a>
                            </li>

                            @if (!isAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Login">
                                        <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/MyProfile">
                                        <i class="bi bi-person-circle"></i> Mi Perfil
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/ChangePassword">
                                        <i class="bi bi-shield-lock"></i> Cambiar Contraseña
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Logout">
                                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                    </a>
                                </li>
                            }

                            @* Only show CRUD navigation if user is authenticated *@
                            @if (isAuthenticated)
                            {
                                <li class="nav-item mt-3">
                                    <span class="text-muted small ps-3">Gestión</span>
                                </li>

                                @if (isAdmin)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Establishments/Index">
                                            <i class="bi bi-building"></i> Establecimientos
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/PersonInCharges/Index">
                                            <i class="bi bi-person-badge-fill"></i> Encargados
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Categories/Index">
                                            <i class="bi bi-tags-fill"></i> Categorías
                                        </a>
                                    </li>
                                    
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Payments/Index">
                                            <i class="bi bi-currency-dollar"></i> Pagos
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Users/Index">
                                            <i class="bi bi-people-fill"></i> Usuarios
                                        </a>
                                    </li>
                                }
                                else if (isContador)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Establishments/Index">
                                            <i class="bi bi-building"></i> Establecimientos
                                        </a>
                                    </li>
                                    
                                    <li class="nav-item">
                                        <a class="nav-link" asp-page="/Fees/Index">
                                            <i class="bi bi-cash-stack"></i> Aranceles
                                        </a>
                                    </li>
                                }
                            }
                            

                        </ul>
                    </div>
                </nav>
            }

            <!-- CONTENIDO PRINCIPAL -->
            <main class="@(hideSidebar ? "col-12" : "col-md-9 ms-sm-auto col-lg-10") px-md-4 py-4">
                <div class="card main-content-card shadow-sm">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>
            </main>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>